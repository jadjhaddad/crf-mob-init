{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "paths": {
      "@/*": [
        "./*"
      ],
      "@/components/*": [
        "./src/presentation/components/*"
      ],
      "@/screens/*": [
        "./src/presentation/screens/*"
      ],
      "@/resources/*": [
        "./resources/*"
      ]
    }
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ]
}